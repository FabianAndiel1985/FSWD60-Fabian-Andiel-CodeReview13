{% extends 'base.html.twig' %}
{% block body %}
       
	<div class="container" id="main">

		<!-- row for first 3 events -->

		  <div class="row">

		  	{% for event in events %}

			    <div class="col-lg-4 mt-3">
			    	<!-- Card -->
					<div class="card">
					  <!-- Card image -->
					  <img class="card-img-top" src=" {{event.image}}  " alt="Card image cap">

					  <!-- https://shop.ticket-pf.de/images/KontraK-20.jpg?20190212120713774545 -->	

					  <!-- Card content -->
					  <div class="card-body">
					    <!-- Title -->
					    <h4 class="card-title"><a>{{ event.name }}</a></h4>
					    <!-- Text -->
					    <ul>
					    	<li>start time {{event.startDate}} </li>
					    	<li> description: {{event.description}} </li>
					    	<li></li>

					    </ul>
					    

					    <!-- Button -->
					    <a href="/events/edit/{{event.id}}" class="btn btn-primary">Edit</a>
					     <a href="/events/details/{{event.id}}" class="btn btn-primary">Detail</a>
					     <a href="/events/delete/{{event.id}}" class="btn btn-danger">Delete</a>

					  </div>
					</div> <!-- End of Card -->

			    </div> <!-- end of column -->
			    {% endfor %}
		    

			</div> <!-- End of row -->

			<div class="row">

		  	{% for event1 in events1 %}

			    <div class="col-lg-4 mt-4 mb-4">
			    	<!-- Card -->
					<div class="card">
					  <!-- Card image -->
					  <img class="card-img-top" src="{{ event1.image }}" alt="Card image cap">
					  <!-- Card content -->
					  <div class="card-body">
					    <!-- Title -->
					    <h4 class="card-title"><a> {{event1.name}} </a></h4>
					    <!-- Text -->
					    <ul>
					    	<li>start time {{event1.startDate}} </li>
					    	<li> description: {{event1.description}} </li>
					    	<li></li>

					    </ul>
					    

					    <!-- Button -->
					    <a href="/events/edit/{{event1.id}}" class="btn btn-primary">Edit</a>
					     <a href="/events/details/{{event1.id}}" class="btn btn-primary">Detail</a>
					     <a href="/events/delete/{{event1.id}}" class="btn btn-danger">Delete</a>

					  </div>
					</div> <!-- End of Card -->

			    </div> <!-- end of column -->
			    {% endfor %}
		    

			</div> <!-- End of row -->



	</div>  <!-- End of container -->
	 


	


{% endblock %}