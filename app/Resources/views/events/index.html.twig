{% extends 'base.html.twig' %}
{% block body %}
       
<div class="container" id="main">

	<!-- row for first 3 events -->

	  <div class="row">

	  	{% for event in events %}

		    <div class="col-lg-4">
		    	<!-- Card -->
				<div class="card">
				  <!-- Card image -->
				  <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/images/43.jpg" alt="Card image cap">
				  <!-- Card content -->
				  <div class="card-body">
				    <!-- Title -->
				    <h4 class="card-title"><a> {{event.name}} </a></h4>
				    <!-- Text -->
				    <ul>
				    	<li>start time {{event.startDate}} </li>
				    	<li> description: {{event.description}} </li>
				    	<li></li>

				    </ul>
				    

				    <!-- Button -->
				    <a href="/events/edit/{{event.id}}" class="btn btn-primary">Edit</a>
				     <a href="/events/details/{{event.id}}" class="btn btn-primary">Detail</a>
				     <a href="/events/delete/{{event.id}}" class="btn btn-danger">Delete</a>

				  </div>
				</div> <!-- End of Card -->

		    </div> <!-- end of column -->
		    {% endfor %}
	    

		</div> <!-- End of row -->





	


{% endblock %}